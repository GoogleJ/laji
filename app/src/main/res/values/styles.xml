<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/font_blue</item>
        <item name="colorAccent">@color/font_blue</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="tab_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TabLayout.TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:layout_marginLeft">40dip</item>
        <item name="android:layout_marginRight">40dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/timestampe_bg</item>
    </style>
    <!--自定义圆形进度条-->
    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_white</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="common_vertical_division_line_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#dddddd</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="user_info_style">
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="share_pop_style">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_buttom_out</item>
    </style>


    <style name="AppTheme.Boot" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="MIS_NO_ACTIONBAR" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="activity_animtion" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/anmitionActivity</item>
    </style>

    <style name="anmitionActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out</item>
    </style>

</resources>
