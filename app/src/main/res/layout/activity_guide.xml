<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_guide_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity=""
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/dot_selector" />

        <ImageView
            android:id="@+id/iv_guide_2"

            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_toRightOf="@+id/iv_guide_1"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/dot_selector" />

        <ImageView
            android:id="@+id/iv_guide_3"

            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/dot_selector" />

        <ImageView
            android:id="@+id/iv_guide_4"

            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_toRightOf="@+id/iv_guide_3"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/dot_selector" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/dot_selector" />
    </LinearLayout>

</RelativeLayout>