<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_item_mechanism_fragment2_dividertop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#E5E5E5"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_item_mechanism_fragment2_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/tv_item_mechanism_fragment2_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_item_mechanism_fragment2_head"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#9D9D9D"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_item_mechanism_fragment2_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_mechanism_fragment2_head"
        android:layout_marginBottom="3dp"
        android:layout_toLeftOf="@id/tv_item_mechanism_fragment2_date"
        android:layout_toRightOf="@id/iv_item_mechanism_fragment2_head"
        android:ellipsize="end"
        android:lines="1"
        android:text="title"
        android:textColor="@color/textcolor1"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_item_mechanism_fragment2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_mechanism_fragment2_head"
        android:layout_toRightOf="@id/iv_item_mechanism_fragment2_head"
        android:paddingRight="8dp"
        android:text="打分"
        android:textColor="#9D9D9D"
        android:textSize="12sp" />

    <com.zhishen.aixuexue.weight.RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_item_mechanism_fragment2_score"
        android:layout_toRightOf="@id/tv_item_mechanism_fragment2_score"
        app:clickable="false"
        app:halfstart="false"
        app:starCount="5"
        app:starEmpty="@mipmap/ic_star_empty"
        app:starFill="@mipmap/ic_star_full"
        app:starImageHeight="20dp"
        app:starImagePadding="5dp"
        app:starImageWidth="20dp" />

    <TextView
        android:id="@+id/tv_item_mechanism_fragment2_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_mechanism_fragment2_score"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_item_mechanism_fragment2_head"
        android:textColor="#464646" />

    <View
        android:id="@+id/view_item_mechanism_fragment2_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_item_mechanism_fragment2_content"
        android:layout_toRightOf="@id/iv_item_mechanism_fragment2_head"
        android:background="#E5E5E5" />

</RelativeLayout>