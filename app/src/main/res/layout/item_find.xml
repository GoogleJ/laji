<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/divider_item_find_hottop"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="#f6f6f6" />

    <LinearLayout
        android:id="@+id/ll_item_find_titleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_item_find_titleview_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="热门话题"
            android:textColor="@color/textcolor1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_find_titleview_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="@color/textcolor3"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:id="@+id/divider_item_find_titleview"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_item_find_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp">

        <ImageView
            android:id="@+id/cir_item_find_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_item_find_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_find_bac4"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:text="进入"
            android:textColor="@color/themecolor" />

        <TextView
            android:id="@+id/tv_item_find_contentview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/tv_item_find_apply"
            android:layout_toRightOf="@id/cir_item_find_head"
            android:ellipsize="end"
            android:lines="1"
            android:text="titleasdasdasdasdasdasdasdasdasdasdasdasd"
            android:textColor="@color/textcolor1"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_item_find_contentview_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_find_contentview_title"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/cir_item_find_head">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_find_bac1"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_friends" />

                <TextView
                    android:id="@+id/tv_item_find_contentview_groupcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="2356"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_find_type_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_find_bac2"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="公开群"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_item_find_type_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_find_bac3"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="私密群"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_find_contentview_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_item_find_contentview_middle"
            android:layout_toLeftOf="@id/tv_item_find_apply"
            android:layout_toRightOf="@id/cir_item_find_head"
            android:ellipsize="end"
            android:lines="1"
            android:text="somethingsdaasdasdasdaasdasdasdasd"
            android:textColor="@color/textcolor3"
            android:textSize="13sp" />

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_item_find_contentview_summary"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/cir_item_find_head"
            android:background="@color/divider" />

    </RelativeLayout>

</LinearLayout>