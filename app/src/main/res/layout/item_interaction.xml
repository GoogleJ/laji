<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5E5" />

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_item_interaction_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:textColor="@color/textcolor2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_item_interaction_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp" />

        <TextView
            android:id="@+id/tv_item_interaction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item_interaction_head"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/textcolor1"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_item_interaction_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_interaction_name"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/tv_item_interaction_distance"
            android:layout_toRightOf="@id/iv_item_interaction_head">

            <TextView
                android:id="@+id/tv_item_interaction_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_interaction_tag"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textColor="@color/textcolor3"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item_interaction_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_interaction_tag"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textColor="@color/textcolor3"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item_interaction_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_interaction_tag"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textColor="@color/textcolor3"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item_interaction_tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_interaction_tag"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textColor="@color/textcolor3"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item_interaction_tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_interaction_tag"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textColor="@color/textcolor3"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_interaction_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_item_interaction_middle"
            android:layout_toLeftOf="@id/tv_item_interaction_distance"
            android:layout_toRightOf="@id/iv_item_interaction_head"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/textcolor3"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>
